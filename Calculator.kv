#:import utils kivy.utils

<Button>:
	font_size: 32
    # Font Color
	color: 0.3, 0.6, 0.7, 1
	size_hint: 0.2, 0.2


<NumberButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#a4ebf3')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]


<SymbolButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#ccf2f4')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]


<PowerButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#f7f6e7')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]


<MyLayout>:

    # This will set the background color
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#f4f9f9')
        Rectangle:
            size: self.size
            pos: self.pos
            
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            # Set Input Blinking to right side
            halign: "right"
            font_size: 40
            spacing: 5
            size_hint: (1, 0.15)
            background_normal: ''
            background_color: utils.get_color_from_hex('#f4f9f9')

        GridLayout:
            cols: 5
            rows: 5
            spacing: 5

            # ROW 1
            SymbolButton:
                text: "("
                on_press: root.button_press("(")

            SymbolButton:
                text: "%"
                on_press: root.button_press("%")

            SymbolButton:
                text: "+/-"
                on_press: root.change_sign()

            SymbolButton:
                text: "^"
                on_press: root.button_press("^")

            SymbolButton:
                text: ")"
                on_press: root.button_press(")")

            # ROW 2
            SymbolButton:
                text: "/"
                on_press: root.button_press("/")
            
            NumberButton:
                text: "7"
                on_press: root.button_press("7")

            NumberButton:
                text: "8"
                on_press: root.button_press("8")

            NumberButton:
                text: "9"
                on_press: root.button_press("9")

            SymbolButton:
                text: "-"
                on_press: root.button_press("-")

            # ROW 3
            SymbolButton:
                text: "x"
                on_press: root.button_press("x")
                
            NumberButton:
                text: "4"
                on_press: root.button_press("4")

            NumberButton:
                text: "5"
                on_press: root.button_press("5")

            NumberButton:
                text: "6"
                on_press: root.button_press("6")

            SymbolButton:
                text: "+"
                on_press: root.button_press("+")

            # ROW 4
            SymbolButton:
                text:"."
                on_press: root.dot()

            NumberButton:
                text: "1"
                on_press: root.button_press("1")

            NumberButton:
                text: "2"
                on_press: root.button_press("2")

            NumberButton:
                text: "3"
                on_press: root.button_press("3")

            SymbolButton:
                text: u"\u00AB"
                on_press: root.backspace()

        GridLayout:
            cols: 3
            rows: 1
            spacing: 5
            size_hint_y: None

            # ROW 5
            PowerButton:
                text: "C"
                id: clear
                size_hint: 0.1, 0.1
                size_hint_x: 2
                on_press: root.clear()

            NumberButton:
                text:"0"
                size_hint: 0.1, 0.1
                size_hint_x: 1
                on_press: root.button_press("0")

            PowerButton:
                text:"="
                size_hint: 0.1, 0.1
                size_hint_x: 2
                on_press: root.equal_to()
